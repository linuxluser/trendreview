<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Trend Review {{ for_date }}</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
</head>

<body>
{% for basket,symbol_data in baskets.items() %}
<h2 class="bg-primary border border-primary text-white mx-auto">{{ basket }}</h2>
    <div class="container">
        {% for symbol,data in symbol_data.items() %}
        <div class="row">
            <div class="col-3">
                <h1><span class="badge bg-success">{{ symbol }}</span></h1>
                <h5><span class="badge bg-primary">{{ data.Basket }}</span></h5>
                <table class="table">
                    <thead><tr>
                        <th scope="col">Trend</th>
                        <th scope="col">RSI(14)</th>
                    </tr></thead>
                    <tbody><tr>
                        <td>{{ data.Trend | default("unknown") }}</td>
                        <td>{{ data.RSI }}</td>
                    </tr></tbody>
                </table>
                <!--
                <ul class="list-group">
                    <li class="list-group-item"><b>RSI(14):</b> {{ data.RSI }}</li>
                    <li class="list-group-item"><b>Trend:</b> {{ data.Trend|default("not set") }}</li>
                </ul>
                -->
            </div>
            <div class="col">
	    <img src="/studies/{{ for_date }}/{{ data.Chart.LocalPath }}" class="img-fluid rounded mx-auto d-block" />
            </div>
        </div>
        {% endfor %}
    </div>
{% endfor %}
</body>

</html>
